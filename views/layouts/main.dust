<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>{+title}My Site{/title}</title>

    <link rel="stylesheet" href="/stylesheets/style.css" />

</head>
<body>
{>"partials/nav"/}
<!--  This will need to change for each view... We should move this into different document framgents,  -->

<!-- First, home screen -->
<!-- @TODO:: move each screen into it's own view? -->

<div class="container">

  <div class="screen home visible" id="screen-home">
    <div class="header">What are we doing?</div>
    <div class="body">
      <button class="pri-cta nav-btn" data-target="screen-send">Send Money</button>
      <button class="pri-cta nav-btn" data-target=screen-history>View transaction history</button>
    </div><!-- /.body -->
    <div class="footer"></div>
  </div> <!-- /#screen-home -->


  <div class="screen send_money hidden" id="screen-send">
    <div class="header">Send Money</div>
    <div class="body">
      <fieldset class="field_container send_to_container">
        <label>To: <input class="send_to validate_email" id="send_to" type="text" /></label>
      </fieldset>

      <fieldset class="field_container">
        <label>Amount: <input class="send_amt format_currency" id="send_amt" type="text" /></label>
        <select name="" id="" class="send_curr">
          <option>USD</option>
        </select>
      </fieldset>

      <fieldset class="field_container">
          <label>Message (Optional): <textarea class="send_msg" id="" cols="30" rows="10"></textarea></label>
      </fieldset>

      <fieldset class="send_purpose_container">
          <legend>What's this payment for?</legend>
            <input id="send_purpose_family" type="radio" name="send_purpose" class="send_purpose" value="family">
            <label for="send_purpose_family" class="send_purpose_btn"> I'm sending money to family or friends</label>
            <input id="send_purpose_goods" name="send_purpose" type="radio" class="send_purpose" value="goods">
            <label for="send_purpose_goods" class="send_purpose_btn"> I'm paying for goods or services</label>

      </fieldset>

    </div><!-- /.body -->
    <div class="footer">
      <button>Clear</button>
      <button class="nav-btn" data-target="screen-overlay,screen-confirmation">Next</button>
    </div><!-- /.footer -->
  </div> <!-- /#screen-send -->

  <div class="overlay screen hidden" id="screen-overlay">Overlay</div>

  <div class="screen hidden" id="screen-confirmation">
    <div class="header">Send Money</div>
    <div class="body">

      You have sent $1.00 USD to John Doe!
    </div><!-- /.body -->
    <div class="footer">
      <button class="nav-btn" data-target="screen-send">Send Money</button>
      <button class="nav-btn" data-target="screen-history">Transaction History</button>
    </div><!-- /.footer -->
  </div> <!-- /#screen-confirmation -->


  <div class="screen hidden" id="screen-history">
    <div class="header">Transaction History</div>
    <div class="body">


      <table class="transaction_container">
        <tr class="transaction">
          <td class="date">12/05/2013</td><td class="desc">John Smith</td><td class="amt">$123.45</td>
        </tr>
        <tr class="transaction">
          <td class="date">12/02/2013</td><td>Adam Smith</td><td class="amt">$1233.12</td>
        </tr>
        <tr class="transaction">
          <td class="date">12/01/2013</td><td>Jamis Johnson</td><td class="amt">$15.2</td>
        </tr>

      </table>

    </div><!-- /.body -->
    <div class="footer">
      <button class="nav-btn" data-target="screen-home">Back</button>
    </div><!-- /.footer -->
  </div> <!-- /#screen-history -->

</div><!-- /.container -->




{+html_body}
{/html_body}

<!-- <div id="footer">{+copy}Copyright{/copy}</footer> -->
<script src="/javascripts/main.js"></script>
</body>
</html>
