// variables
$dark-brown = #4b3418
$input-bg-color = #fff
$input-border-color = #666

//simple resets
*
  box-sizing: border-box

body
  padding: 50px
  font: 14px 'Helvetica Neue', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
a
  color: #00B7FF

.scroll
  overflow: scroll

.container
  // margin: 0 auto
  overflow: hidden

  height: 602px
  left: 500px
  position: absolute
  width: 400px

.screen
  border: 1px solid $dark-brown
  height: 602px
  margin-bottom: 15px
  position: absolute
  // right: -1200px
  // -webkit-transform: translateX(1200px);
  -webkit-transform: translateX(0px);
  transition: -webkit-transform 0.5s ease-out;
  width: 400px


  &.hidden
    -webkit-transform: translateX(1200px);

  &.overlay
    background-color: rgba(0, 0, 0, 0.81)
    transition: all 0s;

  .header, .footer
    background-color: #f5f5f5
    color: #666
    font-size: 21px
    height: 65px
    text-align: center
    padding: 21px
  .footer
    padding: 16px
  .body
    background-color: #333
    color: #e6e6e6
    height: (600 - 65 * 2)px //screen height - header - footer. Can we fetch this from those directly?

    fieldset //FIXME: Let's make this a class instead of el
      border: none
      padding: 0
      legend
        color: #eee
    .field_container
      background-color: $input-bg-color
      border-radius: 6px
      border: 1px solid $input-border-color
      margin-bottom:15px
      padding: 10px
      label
        color: #333
        font-weight bold

    .transaction_container
      border-spacing: 0
      width: 100%

      .transaction
        color #e6e6e6
        // text-shadow: 0px 1px 0px rgba(255, 255, 255, .7);
        &:nth-child(odd)
          background-color: #333
        &:nth-child(even)
          background-color: #444

        .date
          padding: 15px 25px 15px 25px
        .amt
          padding: 15px 25px 15px 25px
          text-align: right

    .pri-cta
      display: block
      margin: 0 auto
      width: 80%

    //form validation
    .send_to_container .validate_email
      &.valid
        background-color: #CFECCF
      &.invalid
        background-color: #FFCFCF

  //specific screens
  &.home .body //home screen
    flex-direction: column
    display: flex
    justify-content: space-around

  &.send_money .body
    padding: 22px 19px

    .send_to
      border: none
      background: transparent
      font-size: 14px
      line-height: 18px
      height: 40px
      margin: -10px 0
      width: 90%
    .send_amt
      border: none
      background: transparent
      font-size: 14px
      line-height: 18px
      height: 40px
      margin: -10px 0
      width: 63%
    .send_msg
      background-color: transparent
      border: none
      font-size: 14px
      resize: none
      width: 100%

    .send_purpose_container
      color: #333
      padding-top: 10px
    .send_purpose
      display: none

      &:checked + .send_purpose_btn //highlight color
        color: #0079c1

    .send_purpose_btn //emulate iOS radio button
      background-color $input-bg-color
      border: 1px solid $input-border-color
      border-radius: 12px

      display: block
      padding: 10px

      &:first-of-type //emulate iOS button corners
        border-bottom-left-radius: 0
        border-bottom-right-radius: 0
      &:last-of-type
        border-top: 0
        border-top-left-radius: 0
        border-top-right-radius: 0


  &.send_history .load_more_msg
    text-align: center
    padding: 10px

  &.send_confirmation .success
    padding-top: 180px
    text-align: center


/*
  General buttons
*/
.pri-cta
  background-color: #0079c1
  border: none
  border-radius: 5px
  color: #fff
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 16px
  font-weight: bold
  padding: 20px
  padding-top 18px
  -webkit-font-smoothing: antialiased;
  &:hover
    background-color #008bdb
    cursor: pointer

.footer
  .pri-cta
    border-radius 3px
    font-size: 12px
    font-weight bold
    padding: 10px 30px

.footer
  .sec-cta
    background-color #ddd
    border-radius 3px
    border: none
    color: #333
    font-size: 12px
    padding: 10px 30px
    &:hover
      background-color: #ebebeb
      cursor: pointer
